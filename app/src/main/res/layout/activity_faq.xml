<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaqActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <!-- Toolbar e top bar -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:background="@color/black">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="33dp"
                android:layout_height="31dp"
                android:layout_alignParentStart="true"
                android:contentDescription="Menu Icon"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="FAQ"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="41dp"
                android:layout_height="31dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-3dp"
                android:contentDescription="User Icon"
                android:src="@drawable/perfil" />
        </RelativeLayout>

        <!-- Perguntas Frequentes -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. O que é o serviço oferecido?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R: O serviço oferecido é uma plataforma para gerenciar solicitações e suporte."
                    android:textColor="@color/gray"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Como posso entrar em contato com o suporte?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R: Você pode entrar em contato pelo e-mail suporte@exemplo.com."
                    android:textColor="@color/gray"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Quais são os horários de atendimento?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R: O atendimento é realizado de segunda a sexta, das 9h às 17h."
                    android:textColor="@color/gray"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Posso abrir um chamado pelo aplicativo?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R: Sim, você pode abrir chamados diretamente pelo aplicativo."
                    android:textColor="@color/gray"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. O que fazer se meu chamado não for respondido?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R: Se não receber uma resposta, entre em contato pelo suporte."
                    android:textColor="@color/gray"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Como posso alterar meus dados pessoais?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R: Você pode alterar seus dados na seção 'Meu Perfil' no aplicativo."
                    android:textColor="@color/gray"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7. O que devo fazer se esquecer minha senha?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R: Você pode redefinir sua senha na tela de login."
                    android:textColor="@color/gray"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8. O aplicativo está disponível para quais plataformas?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:paddingBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R: O aplicativo está disponível para Android e iOS."
                    android:textColor="@color/gray"
                    android:paddingBottom="16dp" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <LinearLayout
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/colorBackground">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#7C7C7C7C"
            android:hint="Do que você precisa?"
            android:drawableStart="@drawable/search"
            android:drawablePadding="8dp"
            android:textColor="#000"
            android:padding="8dp"
            android:background="@drawable/rounded_edittext" />

        <TextView
            android:id="@+id/perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Perfil"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/add_service_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Adicionar Serviço"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/chamados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Chamados"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
